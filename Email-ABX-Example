name: Email-ABX-Example-Do-Not-Modify
version: 1
formatVersion: 1
inputs: {}
resources:
  Cloud_Network_1:
    type: Cloud.Network
    properties:
      networkType: existing
      constraints:
        - tag: 'env:aws'
  Cloud_Machine_1:
    type: Cloud.Machine
    properties:
      image: Ubuntu-16
      flavor: medium
      constraints:
        - tag: 'env:aws'
      networks:
        - network: '${resource.Cloud_Network_1.id}'
          assignPublicIpAddress: 1
      cloudConfig: |
        packages:
         - curl

        users:
          - name: demouser
            sudo: ['ALL=(ALL) NOPASSWD:ALL']
            groups: sudo
            shell: /bin/bash

        runcmd:
          - USER=demouser
          - PASS=vRealiz3!
          - echo $USER:$PASS | /usr/sbin/chpasswd
          - echo $USER:$PASS | /usr/sbin/chpasswd
          - sed -i "s/PasswordAuthentication no/PasswordAuthentication yes/g" /etc/ssh/sshd_config
          - service ssh reload
          - echo "Done" >> /tmp/environment.txt
